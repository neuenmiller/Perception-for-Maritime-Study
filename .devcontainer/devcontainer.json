{
  "name": "Maritime Autonomy Stack",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "ROS_DISTRO": "humble"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "runArgs": [
    "--network=host",
    "--ipc=host",
    "--privileged"
  ],
  "hostRequirements": {
    "gpu": "optional" 
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "ros.distro": "humble",
        "C_Cpp.intelliSenseEngine": "disabled" 
      },
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "redhat.vscode-xml",
        "smilerobotics.urdf",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        "usernamehw.errorlens",
        "esbenp.prettier-vscode",
        "github.vscode-github-actions"
      ]
    }
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "VNC Desktop (Gazebo/Rviz)",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "rosdep update && sudo apt-get update"
}
